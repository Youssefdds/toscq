@startuml
hide empty description
skinparam shadowing false
skinparam state {
  ArrowColor blue
  BorderColor blue
  EndColor black
  StartColor green
  BackGroundColor<< step >> white
  BorderColor<< step >> black
  BackGroundColor<< delegate >> lightgrey
  BackGroundColor<< set_state >> white
  BackGroundColor<< call_operation >> lightblue
  BackGroundColor<< inline >> white
}
skinparam ActivityBarColor<<fork>> DarkGreen
skinparam ActivityBarColor<<join>> DarkOrange

state "stop_podA" as step_declarative_undeploy_stop_podA << step >> {
  state "podA stopping" as step_declarative_undeploy_stop_podA_podA_stopping << set_state >>
  state "podA Standard.stop" as step_declarative_undeploy_stop_podA_podA_Standard.stop << call_operation >>
  state "podA stopped" as step_declarative_undeploy_stop_podA_podA_stopped << set_state >>
  step_declarative_undeploy_stop_podA_podA_stopping --> step_declarative_undeploy_stop_podA_podA_Standard.stop
  step_declarative_undeploy_stop_podA_podA_Standard.stop --> step_declarative_undeploy_stop_podA_podA_stopped
}
state "delete_podA" as step_declarative_undeploy_delete_podA << step >> {
  state "podA deleting" as step_declarative_undeploy_delete_podA_podA_deleting << set_state >>
  state "podA Standard.delete" as step_declarative_undeploy_delete_podA_podA_Standard.delete << call_operation >>
  state "podA initial" as step_declarative_undeploy_delete_podA_podA_initial << set_state >>
  step_declarative_undeploy_delete_podA_podA_deleting --> step_declarative_undeploy_delete_podA_podA_Standard.delete
  step_declarative_undeploy_delete_podA_podA_Standard.delete --> step_declarative_undeploy_delete_podA_podA_initial
}
state "stop_podB" as step_declarative_undeploy_stop_podB << step >> {
  state "podB stopping" as step_declarative_undeploy_stop_podB_podB_stopping << set_state >>
  state "podB Standard.stop" as step_declarative_undeploy_stop_podB_podB_Standard.stop << call_operation >>
  state "podB stopped" as step_declarative_undeploy_stop_podB_podB_stopped << set_state >>
  step_declarative_undeploy_stop_podB_podB_stopping --> step_declarative_undeploy_stop_podB_podB_Standard.stop
  step_declarative_undeploy_stop_podB_podB_Standard.stop --> step_declarative_undeploy_stop_podB_podB_stopped
}
state "delete_podB" as step_declarative_undeploy_delete_podB << step >> {
  state "podB deleting" as step_declarative_undeploy_delete_podB_podB_deleting << set_state >>
  state "podB Standard.delete" as step_declarative_undeploy_delete_podB_podB_Standard.delete << call_operation >>
  state "podB initial" as step_declarative_undeploy_delete_podB_podB_initial << set_state >>
  step_declarative_undeploy_delete_podB_podB_deleting --> step_declarative_undeploy_delete_podB_podB_Standard.delete
  step_declarative_undeploy_delete_podB_podB_Standard.delete --> step_declarative_undeploy_delete_podB_podB_initial
}
step_declarative_undeploy_stop_podA --> step_declarative_undeploy_delete_podA
step_declarative_undeploy_stop_podB --> step_declarative_undeploy_delete_podB
state declarative_undeploy_fork <<fork>>
[*] --> declarative_undeploy_fork
declarative_undeploy_fork --> step_declarative_undeploy_stop_podA
declarative_undeploy_fork --> step_declarative_undeploy_stop_podB
state declarative_undeploy_join <<join>>
declarative_undeploy_join --> [*]
step_declarative_undeploy_delete_podA --> declarative_undeploy_join
step_declarative_undeploy_delete_podB --> declarative_undeploy_join
@enduml
